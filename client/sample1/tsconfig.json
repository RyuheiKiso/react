{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ES6",
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@testing-library/react": ["node_modules/@testing-library/react"]
		},
		"jsx": "react", // または "react-jsx"
	},
	"include": ["src"],
	"exclude": ["node_modules", "build"]
}
